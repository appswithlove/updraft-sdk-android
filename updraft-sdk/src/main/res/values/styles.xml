<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Transparent" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="colorButtonNormal">@android:color/darker_gray</item>
        <item name="colorAccent">@color/updraft_yellow</item>
        <item name="android:textColorHint">@color/updraft_greyish</item>
    </style>

    <style name="UpdraftButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:minHeight">@dimen/updraft_button_min_height</item>
        <item name="android:paddingStart">@dimen/updraft_button_padding_start</item>
        <item name="android:paddingEnd">@dimen/updraft_button_padding_end</item>
        <item name="android:paddingTop">@dimen/updraft_button_padding_top</item>
        <item name="android:paddingBottom">@dimen/updraft_button_padding_bottom</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="UpdraftWhiteBoxEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/charcoal_grey</item>
        <item name="android:textSize">@dimen/updraft_input_text_size</item>
        <item name="android:background">@drawable/white_box_edit_text_background</item>
        <item name="android:padding">@dimen/updraft_white_box_edit_text_padding</item>
    </style>

    <style name="UpdraftSpinnerSelectText" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/charcoal_grey</item>
        <item name="android:textSize">@dimen/updraft_input_text_size</item>
        <item name="android:background">@drawable/white_box_edit_text_background</item>
        <item name="android:padding">@dimen/updraft_white_box_edit_text_padding</item>
    </style>

    <style name="UpdraftBackAndPreviousButton" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/updraft_yellow</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="UpdraftDrawSomethingHereText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/updraft_yellow</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="UpdraftFeedbackProgressText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/updraft_yellow</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>